<?xml version="1.0"?>
<dds xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../resource/schema/rti_routing_service.xsd">

    <routing_service name="PubSubCoord">

        <annotation>
            <documentation>
                Enables remote administration
            </documentation>
        </annotation>

        <administration>
            <domain_id>55</domain_id>
            <participant_qos><transport_builtin><mask>UDPv4</mask></transport_builtin></participant_qos>
        </administration>

        <monitoring>
            <domain_id>56</domain_id>
            <participant_qos><transport_builtin><mask>UDPv4</mask></transport_builtin></participant_qos>
            <statistics_sampling_period>
                <sec>1</sec>
                <nanosec>0</nanosec>
            </statistics_sampling_period>
            <status_publication_period>
                <sec>5</sec>
                <nanosec>0</nanosec>
            </status_publication_period>
        </monitoring>

    </routing_service>

</dds>
